<?xml version="1.0" encoding="UTF-8"?>


<?import fr.isep.jotransportapp.components.LineCard?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1"
         type="Pane"
         xmlns="http://javafx.com/javafx/19">
    <VBox spacing="16" fx:id="container">
        <padding>
            <Insets left="10.0" right="10.0"/>
        </padding>
        <HBox spacing="20">
            <LineCard fx:id="firstLine"/>
            <Label fx:id="firstStation"/>
        </HBox>
        <HBox>
            <VBox alignment="CENTER" prefWidth="20">
                <padding>
                    <Insets bottom="10.0" top="10.0"/>
                </padding>
                <Pane prefWidth="2" minWidth="2" maxWidth="2" VBox.vgrow="ALWAYS" fx:id="verticalPane"/>
            </VBox>
            <VBox fx:id="listList" spacing="10"/>
        </HBox>
    </VBox>
</fx:root>

