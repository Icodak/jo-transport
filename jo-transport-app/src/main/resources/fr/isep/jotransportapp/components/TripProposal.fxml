<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<fx:root xmlns:fx="http://javafx.com/fxml/1"
         type="Pane"
         xmlns="http://javafx.com/javafx/19">
    <HBox fx:id="container" prefHeight="50" prefWidth="960" styleClass="grayOnHover">
        <padding>
            <Insets left="20.0" />
        </padding>
        <!-- Left side container -->
        <HBox fx:id="leftContainer" spacing="30" prefWidth="620" maxWidth="620" alignment="CENTER_LEFT">
            <HBox fx:id="lineContainer" spacing="10"  alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10.0" />
                </padding>
            </HBox>
            <Label fx:id="tripName"/>
        </HBox>

        <!-- Left side container -->
        <HBox fx:id="rightContainer" prefWidth="300" alignment="CENTER_RIGHT">
            <HBox prefWidth="100" alignment="CENTER">
                <ImageView fx:id="affluence"/>
            </HBox>
            <HBox prefWidth="100" alignment="CENTER">
                <Label fx:id="price"/>
            </HBox>
            <HBox prefWidth="100" alignment="CENTER">
                <Label fx:id="duration"/>
            </HBox>


        </HBox>
    </HBox>
</fx:root>

